<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitem_height"
    android:id="@+id/headerLayout"
    android:padding="@dimen/appbar_padding"
    android:dividerPadding="2.5dp"
    android:divider="@color/colorPrimary"
    android:background="@drawable/background_state_drawable"
    android:clickable="true">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorPrimaryDark"
        android:src="@android:drawable/ic_menu_add" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDemographicHeader"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="25sp"
        android:paddingLeft="@dimen/appbar_padding"
        android:textColorHighlight="@color/colorLogoText"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold" />
</LinearLayout>